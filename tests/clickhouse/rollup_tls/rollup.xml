<yandex>
<graphite_rollup>
    <!-- default to store 1 minute point up to 30 days and 1 hour point later -->
    <default>
        <function>avg</function>
        <retention>
            <age>0</age>
            <precision>1</precision>
        </retention>
    </default>
    <pattern>
        <regexp>\.sum$</regexp>
        <function>sum</function>
        <retention>
            <age>0</age>
            <precision>1</precision>
        </retention>
    </pattern>
    <pattern>
        <regexp>\.min$</regexp>
        <function>min</function>
        <retention>
            <age>0</age>
            <precision>1</precision>
        </retention>
    </pattern>
    <pattern>
        <regexp>\.max$</regexp>
        <function>max</function>
        <retention>
            <age>0</age>
            <precision>1</precision>
        </retention>
    </pattern>
</graphite_rollup>
</yandex>
